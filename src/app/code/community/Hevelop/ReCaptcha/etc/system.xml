<?xml version="1.0"?>

<config>
    <tabs>
        <hevelop translate="label" module="racaptcha">
            <label>Hevelop</label>
            <sort_order>400</sort_order>
        </hevelop>
    </tabs>
    <sections>
        <hevelop_recaptcha translate="label" module="racaptcha">
            <label>ReCaptcha</label>
            <tab>hevelop</tab>
            <sort_order>55</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <apy_key translate="label">
                            <label>Api Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <comment><![CDATA[ReCaptcha V3 API KEY]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </apy_key>
                        <apy_secret translate="label">
                            <label>Api Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <comment><![CDATA[ReCaptcha V3 API SECRET]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </apy_secret>
                        <forms_to_validate translate="label">
                            <label>Forms to validate</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <comment><![CDATA[Comma separated list of form ids to validate]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </forms_to_validate>
                    </fields>
                </general>
            </groups>
        </hevelop_recaptcha>
    </sections>
</config>